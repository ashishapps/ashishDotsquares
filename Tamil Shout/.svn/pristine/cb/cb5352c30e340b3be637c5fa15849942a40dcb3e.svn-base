<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageView1"
                android:layout_width="@dimen/upload_image_width"
                android:layout_height="@dimen/upload_image_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/click_upload_img" />

            <ImageView
                  android:scaleType="fitXY"
                android:id="@+id/imageView2"
                android:layout_width="@dimen/upload_image_width"
                android:layout_height="@dimen/upload_image_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/click_upload_img" />

            <ImageView
                  android:scaleType="fitXY"
                android:id="@+id/imageView3"
                android:layout_width="@dimen/upload_image_width"
                android:layout_height="@dimen/upload_image_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/click_upload_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                  android:scaleType="fitXY"
                android:id="@+id/imageView4"
                android:layout_width="@dimen/upload_image_width"
                android:layout_height="@dimen/upload_image_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/click_upload_img" />

            <ImageView
                  android:scaleType="fitXY"
                android:id="@+id/imageView5"
                android:layout_width="@dimen/upload_image_width"
                android:layout_height="@dimen/upload_image_height"
                android:layout_marginLeft="10dp"
                android:background="@drawable/click_upload_img" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addNewImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_common_bg"
        android:text="SAVE ITEM IMAGE"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

</LinearLayout>